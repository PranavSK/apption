{
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "tailwindCSS.experimental.classRegex": [
      ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
      ["cn\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
      ["tw\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
    ],
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
      "strings": "on"
    },
    "files.associations": {
      "*.css": "tailwindcss"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [100]
  }
  